<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:paddingTop="10dp"
    android:background="#dd2c00">
    <EditText
        android:id="@+id/edtTim"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorWhite"
        android:drawableLeft="@drawable/search"
        android:drawablePadding="@dimen/size10dp"
        android:hint="Tìm kiếm món ăn, quán ăn..."
        android:inputType="textEmailAddress"
        android:padding="@dimen/size10dp"
        android:singleLine="true"
        android:textColor="@color/colorBlack"
        android:textColorHint="@color/colorGray"
        android:textSize="15sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />
</LinearLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="684dp"
        android:background="@color/colorWhite">

        <Button
            android:id="@+id/btnHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:drawableLeft="@drawable/home"
            android:paddingLeft="@dimen/size25dp" />

        <Button
            android:id="@+id/btnBasket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="73dp"
            android:background="@color/colorWhite"
            android:drawableLeft="@drawable/basket"
            android:paddingLeft="@dimen/size25dp" />

        <Button
            android:id="@+id/btnPerson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="73dp"
            android:background="@color/colorWhite"
            android:drawableLeft="@drawable/person"
            android:paddingLeft="@dimen/size25dp" />

    </LinearLayout>

</RelativeLayout>

