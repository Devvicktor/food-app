<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingTop="90dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"

    android:background="@drawable/food3">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dangnhap"
        android:layout_centerHorizontal="true"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@color/colorWhite"
        android:fontFamily="@font/nabila"
        />

    <LinearLayout
        android:id="@+id/lnKhungDangNhap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="120dp">


        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:textColorHint="#FAF8F8"
            android:id="@+id/edtEmailLog"
            android:textColor="#FFFCFC"
            android:textSize="30sp"
            android:inputType="textEmailAddress"
            app:met_baseColor="#FFFFFF"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="#FFFFFF"
            app:met_singleLineEllipsis="true"
            android:drawableLeft="@drawable/mail1"
            android:drawablePadding="@dimen/size10dp"
            />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mật khẩu"
            android:textColorHint="#FAF8F8"
            android:id="@+id/edtPassLog"
            android:textColor="#FFFCFC"
            android:textSize="30sp"
            android:inputType="textPassword"
            app:met_baseColor="#FFFFFF"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="#FFFFFF"
            app:met_minCharacters="6"
            app:met_singleLineEllipsis="true"
            android:drawableLeft="@drawable/pass1"
            android:drawablePadding="@dimen/size10dp"
            />





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/btnLog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/size10dp"
                android:layout_weight="1"
                android:background="@drawable/duongvien_xanh"
                android:text="Đăng nhập"
                android:textSize="20sp"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/btnThoatLog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/size10dp"
                android:layout_weight="1"
                android:background="@drawable/duongvien_nau"
                android:text="Thoát"
                android:textSize="@dimen/size20dp"
                android:textAllCaps="false"/>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>