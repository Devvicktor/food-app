<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="@dimen/size10dp"
    android:paddingLeft="@dimen/size10dp"
    android:paddingTop="5dp"

    android:orientation="vertical"
    android:background="@color/colorWhite">


    <TextView
        android:layout_marginTop="8dp"
        android:layout_marginRight="@dimen/size10dp"
        android:id="@+id/cham"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/chamtron"/>
    <TextView
        android:id="@+id/tvtenQuan_line_retaurent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/cham"
        android:text="Ten Quan"
        android:textColor="@color/colorBlack"
        android:textSize="25sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/tvdiachi_line_retaurent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/cham"
        android:layout_below="@+id/tvtenQuan_line_retaurent"
        android:text="dia chi"
        android:textColor="@color/colorBlack"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/tvsdt_lin_restaurent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/cham"
        android:layout_below="@+id/tvdiachi_line_retaurent"
        android:text="sdt"
        android:textColor="@color/colorBlack"
        android:textSize="20sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp">
        <TextView

            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:textColor="#FF9100"
            android:paddingLeft="10dp"
            android:background="#E41D1B1A"
            android:layout_marginTop="35dp"/>
    </LinearLayout>


</RelativeLayout>